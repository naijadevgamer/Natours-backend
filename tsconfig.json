{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "skipLibCheck": true /* Skip type checking all .d.ts files. */,
    "noUnusedLocals": true, // Error on unused variables
    "noUnusedParameters": true, // Error on unused function parameters
    "noFallthroughCasesInSwitch": true, // Error on switch cases that fall through without a break
    "noImplicitOverride": true, // Ensures overrides are explicit with `override` keyword
    "strictFunctionTypes": true, // Enforces more precise function type checks
    "strictBindCallApply": true, // Enforces type-checking for `bind`, `call`, and `apply` methods
    "noImplicitThis": true, // Prevents using `this` implicitly
    "alwaysStrict": true, // Ensures `use strict` is emitted in JavaScript output
    "exactOptionalPropertyTypes": true // Differentiates `undefined` values from unassigned properties
  },
  "include": ["./**/*", "./global.d.ts"]
}
